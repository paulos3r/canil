{{> partials/head }}
{{> partials/header }}
{{> partials/nav }}
{{# banner }}

<section class="banner" style="background-image: url('images/{{ backgound }}')">{{ title }}</section>
<h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}
<div class="container list">
    {{# list}}
        <div class="item">
            <img src="images/{{ imagem }}" class="item--image" />
            <div class="item--name">{{ raca }}</div>
            <div class="item--color">Cor: {{ cor }}</div>
            <div class="item--genre">Gênero: {{ sexo }}</div>
            <div class="item--genre">Localidade: {{ localidade }}</div>
            <div class="item--genre">Contato: {{ telefone }}</div>
        </div>
    {{/ list}}
    
</div>

{{^ list }}
    <div class="container no-list">
        <h2>Não há animais disponiveis nestas condições.</h2>
    </div>
{{/ list }}

{{> partials/footer }}